<%= form_with(model: section, local: true) do |form| %>
<% if section.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

    <ul>
        <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>


<div class="field">
    <%= form.label :day %>

    <%= form.select :day, Date::DAYNAMES %>
</div>

<div class="field">
    <%= form.label :from %>
    <%= form.time_field :from %>
</div>

<div class="field">
    <%= form.label :to %>
    <%= form.time_field :to %>
</div>

<div class="field">
    <%= form.label :class_room %>

    <%= form.select :class_room_id, options_from_collection_for_select(ClassRoom.all, :id, :name) %>
</div>

<div class="field">
    <%= form.label :teacher_subject_id %>

    <%= form.select :teacher_subject_id, options_from_collection_for_select(TeacherSubject.all, :id, :subject_name) %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>